# Compiler flags: -g for debug information, -O3 for optimization
CFLAGS=-g -O3

# The first target is built by default
all: mytokenizer

# Include file dependencies
tokenizer.o: tokenizer.h
interface.o: tokenizer.h

# $@=target, $^=prerequisites
mytokenizer: tokenizer.o interface.o
	cc -o $@ $^ $(CFLAGS)

# Deletes files generated by compilation
clean:
	rm -f *.o mytokenizer
